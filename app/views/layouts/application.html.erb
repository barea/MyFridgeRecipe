<!DOCTYPE html>
<html>
  <head>
    <title>Myfridgerecipe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header >
  <nav class="navbar fixed-top navbar-expand-lg navbar-dark blue lighten-4">

    <a class="navbar-brand" href="#">
       
      <%= link_to "Home", root_path, class: "navbar-brand" %>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">

            <% if (signed_in? && current_user.chef) == true %>
                <li class="nav-item">
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">Manage recipes
                      </a>
                      <div class="dropdown-menu dropdown-default" aria-labelledby="navbarDropdownMenuLink-333">
                        <%= link_to 'New Recipe', new_recipe_path, class:"dropdown-item" %>

                        <%= link_to 'Manage ingredients', ingredients_path, class:"dropdown-item" %>
                      </div>
                </li>
                    
                  <span class="sr-only">(current)</span>

                </li>
            <% end %>
              <span class="sr-only">(current)</span>
          </li>

           <% if signed_in? %>

          <li class="nav-item">
             <%= link_to "Recipes", recipes_path, class:"nav-link" %>
          </li>

          <li class="nav-item">
             <%= link_to "Search by recipe", searchbyrecipe_recipes_path, class:"nav-link" %>
          </li>

            <li class="nav-item dropdown">

              <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">Profile
              </a>
              <div class="dropdown-menu dropdown-default" aria-labelledby="navbarDropdownMenuLink-333">

                <%= link_to current_user.name , edit_user_registration_path, class:"dropdown-item" %>     
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"dropdown-item" %>

              </div>

          </li>
          
        <% else %>

          <li class="nav-item">
             <%= link_to "Recipes", recipes_path, class:"nav-link" %>
          </li>

          <li class="nav-item">
             <%= link_to "Search by recipe", searchbyrecipe_recipes_path, class:"nav-link" %>
          </li>

          </ul>
    </div>

          <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
<ul class="navbar-nav ml-auto">
            <li class="nav-item ">
                <%= link_to "Log in", new_user_session_path, class:"nav-link" %>
          </li>
        </ul>
</div>
        <% end %>


  </nav>
</header>

  <body>
    <%= yield %>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

  </body>
</html>
