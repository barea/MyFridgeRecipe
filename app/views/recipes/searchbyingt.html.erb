<%= form_tag(searchbyingt_recipes_path, :method => "get") do %> 
<% @ingredients.each do |ingredient| %>
 <%= check_box_tag 'ingredient_ids[]', ingredient.id -%>
 <%= ingredient.name -%>
 <% end %>
 <%= submit_tag ("search") %>
<% end %>


<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Prep</th>
      <th>Preptime</th>
      <th>Serving</th>
      <th>Chef</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.prep %></td>
        <td><%= recipe.preptime %></td>
        <td><%= recipe.serving %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %> 

