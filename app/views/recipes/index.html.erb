<div class="jumbotron">
  <div class="container">

<p id="notice"><%= notice %></p>

<div class="row row-cols-1 row-cols-md-3">
<% @recipes.each do |recipe| %>

  <div class="col mb-4">
<div class="card">
   <!--Card image-->
    <% if (recipe.image.small_thumb.url)  %>
         <%= link_to(image_tag(recipe.image.small_thumb.url), recipe, class:"view overlay") %>

      <% else %>

        <%= link_to(image_tag('https://mdbootstrap.com/img/Photos/Lightbox/Thumbnail/img%20(147).jpg', class:"card-img-top"), recipe, class:"view overlay") %>
     
      <% end %>
       
          <div class="mask rgba-white-slight"></div>
     
      <div class="card-body">
        <!--Title-->
        <h5 class="card-title"><%= link_to recipe.title, recipe %></h5>
        <!--Text-->
        <div class="a"><%= recipe.prep %></div>

        

      </div>
    </div>
</div>
  <% end %>

</div>
</div>