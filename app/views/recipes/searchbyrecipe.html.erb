<div class="jumbotron">
  <div class="container">



<div class="search">
<%= form_tag(searchbyrecipe_recipes_path, :method => "get", class:"form-inline d-flex justify-content-center md-form form-sm active-cyan active-cyan-2 mt-2") do %> 
<i class="fa fa-search" aria-hidden="true"></i>
<%= text_field_tag(:title,nil, class:"form-control form-control-sm ml-3 w-75", placeholder:"Search by recipe") %>
<% end %>

</div>
</br>
</br>
<p id="notice"><%= notice %></p>
<div class="row row-cols-1 row-cols-md-3">

<% @recipes.each do |recipe| %>

 <div class="col mb-4">
<div class="card">
   <!--Card image-->
     <%= link_to(image_tag(recipe.image.small_thumb.url), recipe, class:"view overlay") %>
       
      <div class="mask rgba-white-slight"></div>
     
        <div class="card-body">
          <!--Title-->
          <h5 class="card-title"><%= link_to recipe.title, recipe %></h5>
          <!--Text-->
          <div class="a"><%= recipe.prep %></div>
        </div>
    </div>
</div>

  <% end %>


</div>
</div>